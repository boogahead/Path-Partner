<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.pathpartner.reviewarticle.repository.LikeDao">

    <insert id="like" parameterType="map">
        insert into likes(uuid, review_article_id)
        values(#{uuid}, #{reviewArticleId})
    </insert>

    <delete id="unlike" parameterType="map">
        delete from likes
        where uuid = #{uuid} and review_article_id = #{reviewArticleId}
    </delete>

    <select id="getTotalLikeCount" parameterType="String" resultType="int">
        select count(*)
        from likes
        where review_article_id = #{reviewArticleId}
    </select>

    <select id="likedUsers" parameterType="String" resultType="List">
        select uuid
        from likes
        where review_article_id = #{reviewArticleId}
    </select>


</mapper>