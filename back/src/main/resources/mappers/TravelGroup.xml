<?xml version="1.0" encoding="UTF-8" ?> <!-- 관통용  -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.pathpartner.travelgroup.repository.TravelGroupDao">
    <insert id="createTravelGroup" parameterType="travelGroupDto">
        insert into travel_group (group_id,group_name,creation_date,uuid,group_master)
        values (UUID(),#{groupName},now(),#{uuid},true)
    </insert>

    <delete id="deleteTravelGroup" parameterType="String">
        delete
        from travel_group
        where group_id = #{groupId}
    </delete>

    <select id="leaveTravelGroup" parameterType="map">
        delete
        from travel_group
        where group_id = #{groupId}
          and uuid = #{uuid}
    </select>

    <select id="checkGroupMaster" parameterType="map" resultType="boolean">
        select group_master
        from travel_group
        where group_id = #{groupId}
          and uuid = #{uuid}
    </select>

    <select id="getTravelGroupinfo" parameterType="String" resultMap="travelGroupDto">
        select group_id,group_name,creation_date
        from travel_group
        where group_id = #{groupId}
    </select>

</mapper>